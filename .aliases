#!/usr/bin/env bash

# dependencies
# git jq bc jq vim docker xsel tar

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

if which eza > /dev/null 2>&1; then
  alias ls="eza"
fi

# npm
alias dev="__npm_command run dev"

# ---
# OLD
# ---

# general

alias select-file="xsel -b <"
alias dir-size="du -sk * | sort -n"

alias untar="tar xvf"
alias untargz="tar zxvf"
alias untarxz="tar xf"
alias untarbz2="tar xjf"
alias ungz="gzip -d"
alias un7z="7za e"

alias zsh-debug="zprof > zprof-out.txt && less zprof-out.txt && rm zprof-out.txt"

# system

alias syslog-crit="sudo dmesg -w -l err,warn"
alias syslog="sudo dmesg -w"
alias ports="netstat -tulpn"
alias mountcol="mount | column -t"
alias getownip="curl ifconfig.me"
alias curl-json="curl --header 'Content-Type:application/json'"
alias calc="bc -ql"
alias network-active="nmcli device status"
alias audio-active="pacmd list-sinks | grep -e 'name:' -e 'index' -e 'Speakers'"

# apps
alias obsidian="/usr/bin/flatpak run --branch=stable --arch=x86_64 --command=obsidian.sh --file-forwarding md.obsidian.Obsidian @@u %u @@"

# command line

alias vimz="fc"
alias json="jq"

# list

if command -v exa >/dev/null; then
  alias ls="exa"
fi
alias la="ls -lah"

# kitty

alias icat="kitty +kitten icat"

# python

alias pyfind="find . -name '*.py'"
alias pygrep="grep -nr --include='*.py'" # lookup text in python files


