#!/usr/bin/env bash

# shows count of upgradable apt packages
# xfce genmon docs: https://docs.xfce.org/panel-plugins/xfce4-genmon-plugin/start

DATE_TODAY=$(date +"%F")
TT_FILE="$HOME/zeiterfassung/$DATE_TODAY.csv"

# Panel Print if file not exist
if [ ! -f "$TT_FILE" ]; then
  echo "<img>/usr/share/icons/elementary-xfce/actions/16/appointment-new.png</img>"
  echo "<click>create-timetrack</click>"
  echo "<tool>Zeiterfassung f√ºr heute erstellen</tool>"
else
  echo ""
fi

exit 0
