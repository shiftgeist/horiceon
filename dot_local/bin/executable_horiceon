#!/bin/sh

yayAddons() {
    yay -Syu suckless-tools brave-bin spotify notion-app \
        zsh \ # shells
        fzf neofetch htop \ # utils
        neovim code \ # editors
        rsync rclone openssh \ # network
        nodejs-lts-erbium npm \ # language
        ttf-dejavu noto-fonts-emoji otf-overpass \ # fonts
        feh flameshot gpick \ # graphics
        typora \ # markdown
        xterm xsel xcape dunst compton \ # X11
        bat exa tmux
}

zshAddons() {
    mkdir -p "${ZSHPATH:-$HOME/.local/share/zsh}"

    createZshModules() {
        cd "${ZSHPATH:-$HOME/.local/share/zsh}" || exit
        for n in "$@"; do
            git clone "$n" 2> /dev/null
        done
    }

    # Install theme
    [ ! -d  "/usr/local/bin/starship" ] && curl -fsSL https://starship.rs/install.sh | bash || echo "Skipping starship install."

    # Install plugins
    createZshModules \
        "git@github.com:MichaelAquilina/zsh-you-should-use.git" \
        "git@github.com:zsh-users/zsh-syntax-highlighting.git"
}

diffSoFancy() {
    file="$HOME/.local/bin/diff-so-fancy"
    curl -o "$file" -z "$file" \
        -fsSL https://github.com/so-fancy/diff-so-fancy/blob/master/diff-so-fancy &&
        chmod +x "$file"
}

codeAddons() {
    code --install-extension "bierner.markdown-preview-github-styles"
    code --install-extension "editorconfig.editorconfig"
    code --install-extension "esbenp.prettier-vscode"
    code --install-extension "ionutvmi.path-autocomplete"
    code --install-extension "naumovs.color-highlight"
    code --install-extension "ow.vscode-subword-navigation"
    code --install-extension "pflannery.vscode-versionlens"
    code --install-extension "tinkertrain.theme-panda"
    code --install-extension "wakatime.vscode-wakatime"
}

npmAddons() {
    npm i -g sirv-cli live-server firebase-tools \ # development
        doctoc markdownlint-cli \ #markdown
        npm-check-updates \ # dependencies
        tinypng-cli \ # images
        js-beautify # convert text
}

main() {
    yayAddons
    zshAddons
    diffSoFancy
    codeAddons
    npmAddons
}

main
