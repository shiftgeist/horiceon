#!/usr/bin/env zsh

ZSHPATH="${XDG_DATA_HOME:-$HOME/.local/share}/zsh"

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Include custom dir to fpath
fpath=(
    "$ZSHPATH"
    $fpath
)

# Enable colors and change prompt:
autoload -U colors && colors

# Automatically cd into typed directory.
setopt autocd

# Disable ctrl-s to freeze terminal.
stty stop undef

# History in cache directory:
HISTSIZE=5000
SAVEHIST=5000
HISTFILE=~/.cache/zsh/history

# Basic auto/tab complete:
autoload -U compinit
zstyle ':completion:*' menu select
zmodload zsh/complist
compinit
_comp_options+=(globdots) # Include hidden files.

# Auto complete
zstyle ':completion:*:*:*:*:*' menu select
zstyle ':completion:*' matcher-list 'm:{a-zA-Z-_}={A-Za-z_-}' 'r:|=*' 'l:|=* r:|=*' # with case insenstivity
autoload -U +X bashcompinit && bashcompinit

# Plugins
source "$ZSHPATH/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"
source "$ZSHPATH/zsh-you-should-use/you-should-use.plugin.zsh"
source "/usr/share/zsh/vendor-completions/_fzf"

# Load aliases
[ -f "${XDG_CONFIG_HOME:-$HOME/.config}/aliasrc" ] && source "${XDG_CONFIG_HOME:-$HOME/.config}/aliasrc"

# Load untracked zshrc
if [ -f ~/.zshrc_local ]; then
    source ~/.zshrc_local
fi

# Keybinds
bindkey "$terminfo[kcuu1]" history-search-backward
bindkey "$terminfo[kcud1]" history-search-forward

# Emacs key mode
bindkey -e

# Init prompt
eval "$(starship init zsh)"
