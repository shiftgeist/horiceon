[user]
  name = "PUT_NAME_HERE"
  email = "PUT_EMAIL_HERE"

[github]
  user = PUT_USERNAME_HERE

[core]
  pager = diff-so-fancy | less --tabs=4 -RFX

[diff-so-fancy]
  first-run = false

[credential]
  helper = cache --timeout=36000000

[gpg]
  program = gpg2

[color]
  ui = true

[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[alias]
  br = branch --sort=-committerdate
  co = checkout
  lo = log --oneline --decorate --graph --all
  pl = pull
  pls = pull --autostash
  pu = push
  st = status
  push-up = !git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)
  reset-hard = !git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)

[merge]
  conflictStyle = diff3
  tool = code

[merge "merge-changelog"]
  name = GNU-style ChangeLog merge driver
  driver = /usr/bin/git-merge-changelog %O %A %B

[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[pull]
  rebase = true
