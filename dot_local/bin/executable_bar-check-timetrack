#!/usr/bin/env bash

# shows count of upgradable apt packages
# xfce genmon docs: https://docs.xfce.org/panel-plugins/xfce4-genmon-plugin/start

DATE_TODAY=$(date +"%F")
TT_FILE="$HOME/zeiterfassung/$DATE_TODAY.csv"

if [ -f "$TT_FILE" ]; then
  echo "<img>/usr/share/icons/elementary-xfce/actions/24/appointment-new.png</img>"
  echo "<tool>Zeiterfassung Eintrag hinzufügen</tool>"
else
  echo "<img>/usr/share/icons/Adwaita/24x24/status/appointment-soon.png</img>"
  echo "<tool>Zeiterfassung für heute erstellen</tool>"
fi

echo "<click>open-timetrack</click>"
